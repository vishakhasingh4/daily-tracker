{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        // "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        // "noEmit": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        // empty comment
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ]
}
